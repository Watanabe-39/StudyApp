<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.studyappvol2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_to_do_list"
        android:name="com.example.studyappvol2.ui.dashboard.ToDoListFragment"
        android:label="@string/title_to_do_list"
        tools:layout="@layout/fragment_to_do_list" />

    <fragment
        android:id="@+id/navigation_study_time"
        android:name="com.example.studyappvol2.ui.notifications.StudyTimeFragment"
        android:label="@string/title_study_time"
        tools:layout="@layout/fragment_study_time" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.studyappvol2.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" />
</navigation>